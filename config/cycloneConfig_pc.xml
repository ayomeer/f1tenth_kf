

<!--PC config (net=host)-->
<!-- Ref: https://iroboteducation.github.io/create3_docs/setup/xml-config/#cyclone-dds-->
<?xml version="1.0"?>
<CycloneDDS>
  <Domain id="1">
    <General>
      <NetworkInterfaceAddress>eno1</NetworkInterfaceAddress>
      <AllowMulticast>false</AllowMulticast>
      <EnableMulticastLoopback>true</EnableMulticastLoopback>
    </General>
    <Discovery>
      <ParticipantIndex>auto</ParticipantIndex>
      <MaxAutoParticipantIndex>100</MaxAutoParticipantIndex>
      <Peers>
        <Peer Address="${ROBOT_IP}"/>
        <Peer Address="localhost"/>
      </Peers>
    </Discovery>
  </Domain>
  <Domain id="2">
    <General>
      <NetworkInterfaceAddress>wlp2s0</NetworkInterfaceAddress>
      <AllowMulticast>false</AllowMulticast>
      <EnableMulticastLoopback>true</EnableMulticastLoopback>
    </General>
    <Discovery>
      <ParticipantIndex>auto</ParticipantIndex>
      <MaxAutoParticipantIndex>100</MaxAutoParticipantIndex>
      <Peers>
        <Peer Address="${ROBOT_IP_HOTSPOT}"/>
        <Peer Address="localhost"/>
      </Peers>
    </Discovery>
  </Domain>
</CycloneDDS>

